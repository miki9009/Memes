@model Memes.Models.Meme

@{
    ViewData["Title"] = "Create";
}

<h2 style="color:white">Dodawanie</h2>

<form asp-action="Create">
    <div style="background-color:#2e2e2e; color:white; padding-bottom:5px" class="form-horizontal">
        <h4 class="meme">Nowy Mem</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="col-md-2 control-label">Tytuł</label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label  class="col-md-2 control-label">Opis</label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Źródło/Link</label>
            <div class="col-md-10">
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger" />
            </div>
        </div>
        <div class="form-group" >
            <label class="col-md-2 control-label">Kto dodał mema?</label>
            <div class="col-md-10">
                <input asp-for="User" class="form-control" />
                <span asp-validation-for="User" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Typ mema:</label>
            <div class="col-md-10">
                <select asp-for="Type" class="form-control">
                    <option value="0">Obrazek</option>
                    <option value="1">Filmik z serwera</option>
                    <option value="2">Filmik z YouTube</option>
                </select>
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div style="padding:20px 0 10px 0;">
    <a class="Button-page" style="font-size:100%;" asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
